<div class="container">
  <h2 class="pt-4">プロフィール編集</h2>
  <%= form_with model: @user do |f| %>
  <div class="row">
    <div class="col">
      <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>
    <div class="col">
      <label for="inputImage">ProfileImage</label><br>
      <%= f.file_field :profile_image, placeholdaer: "プロフィール画像", accept: "image/*" %>
    </div>
    <div class="col">
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文"%>
    </div>
  </div>

  <%= f.submit "変更を保存" %>
  <% end %>
</div>
