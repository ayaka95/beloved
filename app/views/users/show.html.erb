<h1>ユーザー詳細</h1>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <%= @user.introduction %>
</div>

<h2>投稿一覧</h2>
<% @posts.each do |post| %>
<div>
  <p>タイトル:
    <%= link_to post_path(post.id) do %>
      <%= post.title %>
    <% end %>
  </p>
  <p>投稿画像:<%= image_tag post.get_image %></p>
  <p>本文: <%= post.body %></p>
</div>
<% end %>
<%= paginate @posts %>