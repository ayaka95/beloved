<div class="container">
  <h1 class="p-4">グループ一覧</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">グループ名</th>
        <th scope="col">紹介文</th>
        <th scope="col">メンバー数</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <% @groups.each do |group| %>
    <tbody>
      <tr>
        <th scope="row">
          <td><%= group.name %></td>
          <td><%= group.introduction %></td>
          <td><%= group.users.count %></td>
          <td>
            <%= link_to '削除', admin_group_path(group), method: :delete, "data-confirm" => "グループを削除しますか？", class: "btn btn-sm btn-danger" %>
          </td>
        </th>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate @groups %>
</div>
</div>