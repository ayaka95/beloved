<div class="container">
  <div class="card col-4 mx-auto mt-4">
    <div class="card-body">
      <h4 class="card-title text-center">ログイン</h4>
      <hr>
      <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend w-100">
            <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: :"form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend w-100">
            <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: "current-password", placeholder:"password 6文字以上", class: :"form-control" %>
          </div>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :ログインを記憶する %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Log in", class: :"btn btn-block btn-primary" %>
      </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
