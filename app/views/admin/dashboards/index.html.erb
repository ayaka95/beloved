<div class="container">
  <h1 class="p-4">ユーザー一覧</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">ユーザー名</th>
        <th scope="col">Email</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <th scope="row">
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to '削除', admin_user_path(user), method: :delete, "data-confirm" => "ユーザーを削除しますか？", class: "btn btn-sm btn-danger" %>
          </td>
        </th>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate @users %>
</div>

