<div class="container-md">
  <% if @range == "投稿" %>
  <h1 class="p-4">"<%= @word %>"の検索結果</h1>
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="row mx-4">
      <p class="mt-4"><%= image_tag post.user.get_profile_image(60,60), class: "rounded-circle" %></p>
      <%= link_to user_path(post.user.id) do %>
        <h4 class="ml-3 mt-5"><%= post.user.name %></h4>
      <% end %>
    </div>
    <p class="mx-auto"><%= image_tag post.get_image(400,400) %></p>
    <%= link_to post_path(post.id) do %>
      <p class="mx-4">タイトル: <%= post.title %></h4>
    <% end %>
    <p class="mx-4">本文:<%= post.body %></p>
  </div>
  <% end %>
  <% end %>

  <% if @range == "ユーザー" %>
    <h1 class="p-4">"<%= @word %>"の検索結果</h1>
    <% @users.each do |user| %>
      <div class="card w-50 mx-auto mt-4 shadow-lg">
        <div class="card-body">
          <p class="text-center"><%= image_tag user.get_profile_image(200,200), class: 'rounded-circle' %></p>
          <%= link_to user_path(user.id), class: "p-4" do %>
            <%= user.name %>
          <% end %>
          <p class="pl-4">紹介文：<%= user.introduction %><p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>




