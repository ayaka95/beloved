

<div class="container">
  <div class="card col-4 mx-auto mt-4">
    <div class="card-body">
      <h4 class="card-title text-center">新規登録</h4>
      <hr>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend w-100">
              <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
              <%= f.text_field :name, autofocus: true, placeholder:"name", class: :"form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend w-100">
              <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email", class: :"form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend w-100">
              <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"password 6文字以上", class: :"form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend w-100">
              <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"password確認", class: :"form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Sugn up", class: :"btn btn-block btn-primary" %>
        </div>
    　<% end %>
    　<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
