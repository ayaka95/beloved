<div class="card">
  <div class="card-body">
    <p class="text-center"><%= image_tag user.get_profile_image(200,200), class: 'rounded-circle' %></p>
    <p class="pt-2">名前：<%= user.name %></p>
    <p>紹介文：<%= user.introduction %><p>
    <% if user == current_user %>
      <% unless user.guest_user? %>
        <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
        <p class="pt-2"><%= link_to "退会", user_path(current_user.id), method: :delete, "data-confirm" => "退会しますか？", class: 'btn btn-sm btn-block btn-danger' %></p>
      <% end %>
    <% end %>
  </div>
</div>