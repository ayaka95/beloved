<div class="container">
  <h1 class="pt-4">グループ編集</h1>
  <%= render 'error', group: @group %>
  <%= form_with model: @group do |f| %>
    <label for="inputName"><h4>名前</h4></label>
    <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"30字以内"%></p>
    <label for="inputImage"><h4>画像</h4></label>
    <p><%= f.file_field :image, placeholdaer: "グループ画像", accept: "image/*" %></p>
    <label for="inputIntroduction"><h4>自己紹介文</h4></label>
    <p><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"100文字以内", class: "w-50" %></p>
    <p><%= f.submit "変更を保存", class: "btn btn-md btn-primary" %></p>
  <% end %>
</div>