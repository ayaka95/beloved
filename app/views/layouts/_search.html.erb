<div class="container">
  <div class="p-4">
  <%= form_with url: search_path, local: true, method: :post do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([['ユーザー'], ['投稿']]) %>
    <%= f.select :search, options_for_select({"完全一致" => "perfect_match", "部分一致" => "partial_match"}) %>
    <%= f.submit '検索', class: "btn-sm btn-primary" %>
  <% end %>
  </div>
</div>